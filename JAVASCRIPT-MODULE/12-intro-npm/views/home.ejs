<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/home.css" rel="stylesheet" type="text/css">
    <link href="/css/navbar.css" rel="stylesheet" type="text/css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
    <title>Moviehub</title>    
</head>
<body>
    <main id="main" class="container-fluid">

      <%- include('../components/navbar.ejs') %>
      <%- include('../partials/header.ejs') %>

        <h2 class="mb-3">Au cinéma cette semaine</h2>
        <section class="row list">
            <% for(let i = 0; i < datas.length; i++) { %>
                <article class="movie-item col-xs-12 col-sm-8 col-md-6 col-lg-4 mb-3 mt-3">
                    <div class="movie-img">
                        <img src=<%= img_url%><%= datas[i].poster_path %> alt="">
                    </div>
                    <h3><%= datas[i].title %></h3>
                    <h3>Note : 
                        <% if(datas[i].vote_average <= 1.9 && datas[i].vote_average >= 0) {%>
                            <!-- 1 étoile -->
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                        <% } %>
                        <% if(datas[i].vote_average <= 3.9 && datas[i].vote_average >= 2) {%>
                            <!-- 2 étoile -->
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                        <% } %>
                        <% if(datas[i].vote_average <= 5.9 && datas[i].vote_average >= 4) {%>
                            <!-- 3 étoile -->
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                        <% } %>
                        <% if(datas[i].vote_average <= 7.9 && datas[i].vote_average >= 6) {%>
                            <!-- 4 étoile -->
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                        <% } %>
                        <% if(datas[i].vote_average <= 10 && datas[i].vote_average >= 8 || datas[i].vote_average === 10) {%>
                            <!-- 5 étoile -->
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        <% } %>
                    </h3>
                   
                    <p>Histoire : <%= datas[i].overview.substr(0, 50) %> ...</p>
                    <p>Date de sortie : <%= datas[i].release_date %></p>
                    <a class="btn" href="/movie/<%= datas[i].id %> ">En savoir plus</a>
                </article>
            <% } %>
        </section>
    </main>
    <%- include('../partials/footer.ejs') %>